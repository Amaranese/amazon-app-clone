<p id="notice"><%= notice %></p>

<h1>Tag Product Maps</h1>

<table>
  <thead>
    <tr>
      <th>Tag</th>
      <th>Product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tag_product_maps.each do |tag_product_map| %>
      <tr>
        <td><%= tag_product_map.tag %></td>
        <td><%= tag_product_map.product %></td>
        <td><%= link_to 'Show', tag_product_map %></td>
        <td><%= link_to 'Edit', edit_tag_product_map_path(tag_product_map) %></td>
        <td><%= link_to 'Destroy', tag_product_map, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

